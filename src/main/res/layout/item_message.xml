<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginStart="@dimen/activity_horizontal_margin"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/recievemessageTextView"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:autoLink="all"
        android:background="@drawable/bubble_b"
        android:paddingLeft="27dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/recievenameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:textSize="10sp"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sendmessageTextView"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:autoLink="all"
        android:background="@drawable/bubble_a"
        android:paddingLeft="27dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/sendnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name"
        android:layout_gravity="right"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:textSize="10sp"/>

</LinearLayout>